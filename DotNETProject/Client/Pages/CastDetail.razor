@page "/cast/{Id}"
@using DotNETProject.Shared;
@inject HttpClient httpClient

<div class="container" height="100%">
    <div class="row">
        <div class="col-md-3">
            <img id="cast-img" src="@cast.AvatarUrl" class="img-fluid rounded-3" alt="Actor Avatar">
        </div>
        <div class="col-md-9 pl-5">
            <h2 class="text-white lg"><strong>@cast.Name</strong></h2><br>
            <h4 class="text-white">Tiểu Sử</h4>
            <p>@cast.Description</p>
            <h4 class="text-white">Ngày Sinh</h4>
            <p>@cast.BirthDate</p>
            <h4 class="text-white">Giới Tính</h4>
            <p>@cast.Gender</p>
            <h4 class="text-white">Quốc Gia</h4>
            <p>@cast.Nation</p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <h3 class="text-light">Các phim có sự tham gia của @cast.Name</h3>

            <div class="container">
                <div class="row">
                    @foreach (var item in cast.FilmCasts)
                    {
                        string filmType = filmTypes[item.Film.Id];
                        if (filmType == "MOVIE")
                        {
                            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-6"><a href="/movie/@item.Film.Id"><img class="w-100" src="@item.Film.PosterUrl"><p class="film-name">@item.Film.Name</p></a></div>
                        }
                        else if (filmType == "TV")
                        {
                            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-6"><a href="/tv/@item.Film.Id"><img class="w-100" src="@item.Film.PosterUrl"><p class="film-naem">@item.Film.Name</p></a></div>
                        }
                        else
                        {
                            <p>Diễn viên chưa tham gia bất kỳ bộ phim nào!</p>
                        }
                    }

                </div>
            </div>
            

        </div>
    </div>
</div>


@code {
    [Parameter]
    public string Id { get; set; }
    private CastDto cast = new CastDto();
    private Dictionary<int, string> filmTypes = new Dictionary<int, string>();

    protected override async Task OnInitializedAsync()
    {
        int getId = Int32.Parse(Id);
        cast = await httpClient.GetFromJsonAsync<CastDto>($"api/Casts/{getId}");

        foreach(var item in cast.FilmCasts)
        {
            string flag = await httpClient.GetStringAsync($"api/Films/{item.Film.Id}");
            filmTypes.Add(item.Film.Id, flag);
        }
    }

}

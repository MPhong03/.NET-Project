@page "/cast/{Id}"
@using DotNETProject.Shared;
@inject HttpClient httpClient

<div class="container" height="100%">
    <div class="row">
        <div class="col-md-4">
            <img src="@cast.AvatarUrl" class="img-fluid rounded-3" alt="Actor Avatar">
        </div>
        <div class="col-md-8">
            <h2>Diễn viên: @cast.Name</h2>
            <p><strong>Ngày sinh:</strong> @cast.BirthDate</p>
            <p><strong>Giới tính:</strong> @cast.Gender</p>
            <p><strong>Quốc gia:</strong> @cast.Nation</p>
            <p><strong>Mô tả:</strong> @cast.Description</p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <h3 class="text-light">Các phim đã tham gia</h3>

            <div class="container">
                <div class="row">
                    @foreach (var item in cast.FilmCasts)
                    {
                        string filmType = filmTypes[item.Film.Id];
                        if (filmType == "MOVIE")
                        {
                            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-6"><a href="/movie/@item.Film.Id"><img src="@item.Film.PosterUrl"><p>@item.Film.Name</p></a></div>
                        }
                        else if (filmType == "TV")
                        {
                            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-6"><a href="/show/@item.Film.Id"><img src="@item.Film.PosterUrl"><p>@item.Film.Name</p></a></div>
                        }
                        else
                        {
                            <p>Diễn viên chưa tham gia bất kỳ bộ phim nào!</p>
                        }
                    }

                </div>
            </div>
            

        </div>
    </div>
</div>


@code {
    [Parameter]
    public string Id { get; set; }
    private CastDto cast = new CastDto();
    private Dictionary<int, string> filmTypes = new Dictionary<int, string>();

    protected override async Task OnInitializedAsync()
    {
        int getId = Int32.Parse(Id);
        cast = await httpClient.GetFromJsonAsync<CastDto>($"api/Casts/{getId}");

        foreach(var item in cast.FilmCasts)
        {
            string flag = await httpClient.GetStringAsync($"api/Films/{item.Film.Id}");
            filmTypes.Add(item.Film.Id, flag);
        }
    }

}

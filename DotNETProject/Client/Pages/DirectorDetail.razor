@page "/director/{Id}"
@using DotNETProject.Shared;
@inject HttpClient httpClient

<div class="container" height="100%">
    <div class="row">
        <div class="col-md-4">
            <img src="@director.AvatarUrl" class="img-fluid rounded-3" alt="Actor Avatar">
        </div>
        <div class="col-md-8">
            <h2>Diễn viên: @director.Name</h2>
            <p><strong>Ngày sinh:</strong> @director.BirthDate</p>
            <p><strong>Giới tính:</strong> @director.Gender</p>
            <p><strong>Quốc gia:</strong> @director.Nation</p>
            <p><strong>Mô tả:</strong> @director.Description</p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <h3 class="text-light">Các phim đã tham gia</h3>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public string Id { get; set; }
    private DirectorDto director = new DirectorDto();

    protected override async Task OnInitializedAsync()
    {
        int getId = Int32.Parse(Id);
        director = await httpClient.GetFromJsonAsync<DirectorDto>($"api/directors/{getId}");
    }
}
